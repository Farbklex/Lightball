<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/list_item_padding"
                android:paddingLeft="@dimen/list_item_padding"
                android:paddingRight="@dimen/list_item_padding"
                android:elevation="2dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
    android:animateLayoutChanges="true">

    <ImageView
        android:id="@+id/player_portrait"
        android:layout_width="@dimen/player_portrait_size"
        android:layout_height="@dimen/player_portrait_size"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_person_outline_black_48dp"/>

    <ImageView
        android:id="@+id/playerHealth"
        android:layout_width="@dimen/player_portrait_size"
        android:layout_height="@dimen/player_portrait_size"
        android:layout_centerVertical="true"
        android:baselineAlignBottom="true"
        android:background="#804CAF50"/>

    <TextView
        android:id="@+id/player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="Player name"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/player_portrait"/>

</RelativeLayout>
