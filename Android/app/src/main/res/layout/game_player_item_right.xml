<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/player_portrait_size"
    android:layout_marginBottom="@dimen/list_item_padding"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:elevation="2dp"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/list_item_padding"
    android:paddingRight="@dimen/list_item_padding">

        <TextView
            android:id="@+id/player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:text="-"
            android:layout_gravity="center"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            />
    <RelativeLayout android:layout_height="@dimen/player_portrait_size"
                    android:layout_width="@dimen/player_portrait_size">
        <ImageView
            android:id="@+id/player_portrait"
            android:layout_width="@dimen/player_portrait_size"
            android:layout_height="@dimen/player_portrait_size"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_person_outline_black_48dp"/>

        <ImageView
            android:id="@+id/playerHealth"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="#804CAF50"/>


    </RelativeLayout>
</LinearLayout>